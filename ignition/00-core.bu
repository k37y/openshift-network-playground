          - name: worker
            replicas: 0
          controlPlane:
            name: master
            replicas: 3
            platform:
              baremetal: {}
          platform:
            baremetal:
              libvirtURI: qemu:///system
              bootstrapOSImage: ${BOOTSTRAP_OS_IMAGE}
              apiVIP: 192.168.123.88
              ingressVIP: 192.168.123.89
              provisioningNetworkCIDR: 172.22.0.0/24
              hosts:
                - name: master0
                  role: master
                  bmc:
                    address: ipmi://192.168.123.1:6230
                    username: admin
                    password: password
                  bootMACAddress: 52:54:00:11:22:b1
                  hardwareProfile: libvirt
                  rootDeviceHints:
                   deviceName: "/dev/vda"
                - name: master1
                  role: master
                  bmc:
                    address: ipmi://192.168.123.1:6231
                    username: admin
                    password: password
                  bootMACAddress: 52:54:00:11:22:b2
                  hardwareProfile: libvirt
                  rootDeviceHints:
                   deviceName: "/dev/vda"
                - name: master2
